@page "{id:int}"
@model ToDoListFrontEnd.Pages.ToDoItems.EditModel
@{
    ViewData["Title"] = "Edit To-Do Item";
}

<h1>Edit To-Do Item</h1>

<h4>To-Do Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="ToDoItem.Id" />
            <div class="form-group">
                <label asp-for="ToDoItem.Title" class="control-label"></label>
                <input asp-for="ToDoItem.Title" class="form-control" />
                <span asp-validation-for="ToDoItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.Description" class="control-label"></label>
                <input asp-for="ToDoItem.Description" class="form-control" />
                <span asp-validation-for="ToDoItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.IsCompleted" class="control-label"></label>
                <select asp-for="ToDoItem.IsCompleted" class="form-control">
                    <option value="true" selected="@Model.ToDoItem.IsCompleted">Yes</option>
                    <option value="false" selected="@(!Model.ToDoItem.IsCompleted)">No</option>
                </select>
                <span asp-validation-for="ToDoItem.IsCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.DueDate" class="control-label"></label>
                <input asp-for="ToDoItem.DueDate" class="form-control" type="date" />
                <span asp-validation-for="ToDoItem.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.PriorityId" class="control-label"></label>
                <input asp-for="ToDoItem.PriorityId" class="form-control" />
                <span asp-validation-for="ToDoItem.PriorityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoItem.UserId" class="control-label"></label>
                <select asp-for="ToDoItem.UserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "Name"))"></select>
                <span asp-validation-for="ToDoItem.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>